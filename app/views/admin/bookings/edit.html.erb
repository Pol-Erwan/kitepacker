<body>

<div class="container card card-body" style="padding-bottom:40px; border-radius:20px; background-color:white; opacity:96%; margin-top:80px; margin-bottom:80px;">
  <div class="row">
    <div class="col-md-6 offset-md-3">

      <h2 class="title"> Modifier la reservation</h2>
          <%= form_tag url_for(action: 'update'), method: "put", multipart: true do %>

            <%= label_tag 'Date de debut' %>
            <%= date_field_tag 'start_date', @booking.start_date, class: "form-control datetimepicker" %>
            <br /> <br />

            <%= label_tag 'Date de fin' %>
            <%= date_field_tag 'end_date', @booking.end_date, class: "form-control datetimepicker" %>
            <br /> <br />

            <%= label_tag 'Nombre de places' %>
            <%= text_field_tag 'bed_booked', @booking.bed_booked, class: "form-control"%>
            <br /> <br />

            <%= label_tag 'Location de materiels' %>
            <%= check_box_tag 'location_item'  %>
            <br /> <br />

            <%= label_tag "Pension complete" %>
            <%= check_box_tag 'full_board' %>
            <br /> <br />

            <center><%= submit_tag "Valider la reservation", class:"btn btn-outline-primary" %></center>
          <% end %>

        </div>
      </div>
    </div>
</body>
