<body style="background-image: url(https://images.unsplash.com/photo-1542315291377-a38c9fe57384?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80); background-repeat:no-repeat; background-size:cover; background-position:center;">

  <div class="container pt-lg-md" >
    <div class="row justify-content-start">
      <div class="col-lg-5">
        <div class="card bg-white shadow border-0" style="width:140%; border-radius:20px; margin-top:10rem; margin-bottom:4rem;">

          <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin mt-3" } do |f| %>
              <h4 class="h3 my-4 font-weight-normal text-center" style="font-size:38px;">S'inscrire</h4>
              <hr style="width:80%;">
                <%= devise_error_messages! %>
                <div class="mx-auto pb-3" style="width:80%;">

                    <div class="container row " style="margin-left:-30px;">

                        <div class="field col-6 form-group" >
                          <%= f.label :Prénom %><br />
                          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control"  %>
                        </div>

                        <div class="field col-6 form-group" >
                          <%= f.label :Nom %><br />
                          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control"  %>
                        </div>

                    </div>

                        <div class="form-group">
                          <%= f.label :email, "Email" %><br />
                          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                        </div>

                        <div class="form-group">
                          <%= f.label :Mot_de_passe %>
                          <% if @minimum_password_length %>
                          <em><small>(<%= @minimum_password_length %> caractères min.)</small></em>
                          <% end %><br />
                          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                        </div>

                        <div class="form-group">
                          <%= f.label :Confirmation_du_mot_de_passe %><br />
                          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
                        </div>

                        <div class="actions my-4">
                          <%= f.submit "Sign up", class:"btn btn-primary btn-block btn-round" %>
                        </div>
                        <br>
                      <% end %>
                      <%= render "devise/shared/links" %>

                  </div>
              </div>
          </div>
      </div>
  </div>

  </body>
